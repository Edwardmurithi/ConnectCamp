<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#3F51B5</item> <!-- Dark Blue -->
        <item name="colorPrimaryDark">#303F9F</item> <!-- Darker Blue -->
        <item name="colorAccent">#FF4081</item> <!-- Pink Accent -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">#000000</item> <!-- Black Text -->
        <item name="android:fontFamily">sans-serif</item> <!-- Default Font -->
    </style>

    <!-- No ActionBar theme -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#3F51B5</item> <!-- Dark Blue -->
        <item name="colorPrimaryDark">#303F9F</item> <!-- Darker Blue -->
        <item name="colorAccent">#FF4081</item> <!-- Pink Accent -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">#000000</item> <!-- Black Text -->
        <item name="android:fontFamily">sans-serif</item> <!-- Default Font -->
    </style>

    <!-- Customize your button styles -->
    <style name="ButtonStyle">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
